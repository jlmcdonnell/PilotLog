<resources>
    <!-- Base application theme. -->
    <style name="Theme.PilotLog" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/lightBlue0</item>
        <item name="colorPrimaryVariant">@color/lightBlue1</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/lightBlue0</item>
        <item name="colorSecondaryVariant">@color/lightBlue1</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="TextButton.Negative">
        <item name="android:textColor">@color/grey1</item>
        <item name="rippleColor">@color/grey2</item>
    </style>

    <style name="Divider">
        <item name="android:layout_height">@dimen/dividerHeight</item>
        <item name="android:background">@color/grey2</item>
    </style>

    <style name="Divider.Dialog">
        <item name="android:background">@color/grey0Transparent</item>
    </style>
</resources>
